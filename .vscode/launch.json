{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Autoreduce REST API",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/autoreduce_rest_api/manage.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "runserver"
            ],
            "console": "integratedTerminal",
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "-v",
                "${file}"
            ],
            "django": true,
            "presentation": {
                "hidden": false,
                "group": "autoreduce-native",
            },
            "env": {
                "DISPLAY": ":1",
                "RUNNING_VIA_PYTEST": "true",
                "SELENIUM_REMOTE": "1"
            },
            "justMyCode": false
        },
        {
            "name": "Pytest unit tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "--ignore=autoreduce_qp/systemtests",
                "-v",
                "autoreduce_qp"
            ],
            "django": true,
            "presentation": {
                "hidden": false,
                "group": "autoreduce-native",
            },
            "env": {
                "DISPLAY": ":1",
                "RUNNING_VIA_PYTEST": "true",
                "SELENIUM_REMOTE": "1"
            },
            "justMyCode": false
        },
        {
            "name": "Pytest - coverage",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--cov-report",
                "html",
                "--cov=${workspaceFolder}/queue_processors",
                "-v",
                "${file}"
            ],
            "presentation": {
                "hidden": false,
                "group": "autoreduce-native",
            },
            "env": {
                "DISPLAY": ":1",
                "RUNNING_VIA_PYTEST": "true",
                "SELENIUM_REMOTE": "1"
            }
        },
    ]
}